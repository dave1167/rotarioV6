<!-- Wappler include head-page="layouts/admin" fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="event_list_admin" appConnect="local" components="{dmxBootstrap5Alert:{},dmxFormatter:{},dmxStateManagement:{},dmxBootstrap5Modal:{}}" -->
<dmx-serverconnect id="scGetSingleEvent" url="/api/Events/getSingleEvent" noload="true"></dmx-serverconnect>
<dmx-session-manager id="session2"></dmx-session-manager>
<meta name="ac:route" content="/admin/events/event_list_admin">
<dmx-serverconnect id="scShowAllEvents" url="/api/Events/showAllEvents" dmx-param:filter="inpSearch.value"></dmx-serverconnect>
<dmx-serverconnect id="scSelLocation" url="/api/Events/getLocation"></dmx-serverconnect>
<dmx-serverconnect id="scVenue" url="/api/Events/getVenue" dmx-param:location="modEditEvent.form1.selLocation.value"></dmx-serverconnect>
<div class="modal" id="modEditEvent" is="dmx-bs5-modal" tabindex="-1">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    <div class="col">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title text-white bg-primary">Edit event</h4>
                                <h5>Fancy display heading</h5>
                            </div>
                            <div class="card-body">

                                <div class="row">
                                    <div class="col">
                                        <form id="form1">
                                            <div class="row">
                                                <div class="col">
                                                    <div class="form-group mb-3 row">
                                                        <label for="input2" class="col-sm-2 col-form-label">Event Name</label>
                                                        <div class="col-sm-10">
                                                            <input type="text" class="form-control form-control-lg" id="input2" name="input2" aria-describedby="input2_help" placeholder="Enter some text" dmx-bind:value="scGetSingleEvent.data.query.eventName">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">

                                                <div class="col">
                                                    <div class="form-group mb-3"> <label for="input1" class="form-label">Location</label>
                                                        <select id="selLocation" class="form-select" dmx-bind:options="scSelLocation.data.query" optiontext="location" optionvalue="locationId">
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col">
                                                    <div class="form-group mb-3"> <label for="input1" class="form-label">Venue</label>
                                                        <select id="selVenue" class="form-select" dmx-bind:options="scVenue.data.query" optiontext="venueDesc" optionvalue="venueId">
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">


                                                <div class="col">
                                                    <div class="form-group mb-3"> <label for="inpEvDte" class="form-label col-form-label-sm">Event Date</label>
                                                        <input type="date" class="form-control form-control-sm" id="inpEvDte" name="inpEvDte" aria-describedby="input1_help" placeholder="Enter some text" dmx-bind:value="scGetSingleEvent.data.query.eventDate">
                                                    </div>
                                                </div>
                                                <div class="col">
                                                    <div class="form-group mb-3"> <label for="inpStrtTime" class="form-label col-form-label-sm">Start Time</label>
                                                        <input class="form-control form-control-sm" id="inpStrtTime" name="inpStrtTime" aria-describedby="input1_help" placeholder="Enter time" dmx-bind:value="scGetSingleEvent.data.query.eventStrtTime">
                                                    </div>
                                                </div>
                                                <div class="col">
                                                    <div class="form-group mb-3"> <label for="inpVols" class="form-label col-form-label-sm">Number of Volunteers</label>
                                                        <input type="number" class="form-control form-control-sm" id="inpVols" name="inpVols" aria-describedby="input1_help" placeholder="Enter some text" dmx-bind:value="scGetSingleEvent.data.query.numvols">
                                                    </div>
                                                </div>
                                                <div class="col">
                                                    <div class="form-group mb-3"> <label for="input1" class="form-label">Event Weighting</label>
                                                        <select id="selWeight" class="form-select" name="selWeight">
                                                            <option value="1">Low Demand</option>
                                                            <option value="2">Medium Demand</option>
                                                            <option value="3">High Demand</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col">
                                                    <div class="form-group mb-3"> <label for="input3" class="form-label">Volunteer Arrival Time</label>
                                                        <select id="selVolArrival" class="form-select" name="selVolArrival" dmx-bind:value="60">
                                                            <option value="15">15</option>
                                                            <option value="20">20</option>
                                                            <option value="25">25</option>
                                                            <option value="30">30</option>
                                                            <option value="35">35</option>
                                                            <option value="40">40</option>
                                                            <option value="45">45</option>
                                                            <option value="50">50</option>
                                                            <option value="55">55</option>
                                                            <option value="60">60</option>
                                                            <option value="75">75</option>
                                                            <option value="90">90</option>
                                                            <option value="105">105</option>
                                                            <option value="120">120</option>
                                                            <option value=""></option>
                                                        </select>
                                                        <small id="input3_help" class="form-text text-muted">Your input is very valuable.</small>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <a href="#" class="btn btn-primary">Go somewhere</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>