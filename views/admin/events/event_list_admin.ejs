<!-- Wappler include head-page="layouts/admin" fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="event_list_admin" appConnect="local" components="{dmxBootstrap5Alert:{},dmxFormatter:{},dmxStateManagement:{},dmxBootstrap5Modal:{},dmxBootstrap5TableGenerator:{},dmxBootbox5:{},dmxDataTraversal:{},dmxDatastore:{}}" -->
<dmx-serverconnect id="scGetSingleEvent" url="/api/Events/getSingleEvent" noload="true"></dmx-serverconnect>


<meta name="ac:route" content="/admin/events/event_list_admin">
<dmx-serverconnect id="scShowAllEvents" url="/api/Events/showAllEvents" dmx-param:filter="inpSearch.value"></dmx-serverconnect>
<dmx-serverconnect id="scSelLocation" url="/api/Events/getLocation"></dmx-serverconnect>
<dmx-serverconnect id="scGetVolsEvent" url="/api/Events/getVolsEvents2" dmx-param:eventid="" noload="true"></dmx-serverconnect><dmx-serverconnect id="scVenue" url="/api/Events/getVenue" dmx-param:location="modEditEvent.form1.selLocation.value"></dmx-serverconnect>

<dmx-session-manager id="session2"></dmx-session-manager>
<dmx-data-view id="dvEvents1" dmx-bind:data="scGetVolsEvent.data.repeat"></dmx-data-view>
<div class="modal" id="modEditEvent" is="dmx-bs5-modal" tabindex="-1">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    <div class="col">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title text-white bg-primary">Edit event</h4>
                                <h5>Fancy display heading</h5>
                            </div>
                            <div class="card-body">

                                <div class="row">
                                    <div class="col">
                                        <form id="form1">
                                            <input id="inpEvId" name="inpEvId" type="text" class="form-control" dmx-bind:value="repeat1[$index].eventId">
                                            <div class="row">
                                                <div class="col">
                                                    <div class="form-group mb-3 row">
                                                        <label for="input2" class="col-sm-2 col-form-label">Event Name</label>
                                                        <div class="col-sm-10">
                                                            <input type="text" class="form-control form-control-lg" id="input2" name="input2" aria-describedby="input2_help" placeholder="Enter some text" dmx-bind:value="scGetSingleEvent.data.query.eventName">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">

                                                <div class="col">
                                                    <div class="form-group mb-3"> <label for="input1" class="form-label">Location</label>
                                                        <select id="selLocation" class="form-select" dmx-bind:options="scSelLocation.data.query" optiontext="location" optionvalue="locationId">
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col">
                                                    <div class="form-group mb-3"> <label for="input1" class="form-label">Venue</label>
                                                        <select id="selVenue" class="form-select" dmx-bind:options="scVenue.data.query" optiontext="venueDesc" optionvalue="venueId">
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">


                                                <div class="col">
                                                    <div class="form-group mb-3"> <label for="inpEvDte" class="form-label col-form-label-sm">Event Date</label>
                                                        <input type="date" class="form-control form-control-sm" id="inpEvDte" name="inpEvDte" aria-describedby="input1_help" placeholder="Enter some text" dmx-bind:value="scGetSingleEvent.data.query.eventDate">
                                                    </div>
                                                </div>
                                                <div class="col">
                                                    <div class="form-group mb-3"> <label for="inpStrtTime" class="form-label col-form-label-sm">Start Time</label>
                                                        <input class="form-control form-control-sm" id="inpStrtTime" name="inpStrtTime" aria-describedby="input1_help" placeholder="Enter time" dmx-bind:value="scGetSingleEvent.data.query.eventStrtTime">
                                                    </div>
                                                </div>
                                                <div class="col">
                                                    <div class="form-group mb-3"> <label for="inpVols" class="form-label col-form-label-sm">Number of Volunteers</label>
                                                        <input type="number" class="form-control form-control-sm" id="inpVols" name="inpVols" aria-describedby="input1_help" placeholder="Enter some text" dmx-bind:value="scGetSingleEvent.data.query.numvols">
                                                    </div>
                                                </div>
                                                <div class="col">
                                                    <div class="form-group mb-3"> <label for="input1" class="form-label">Event Weighting</label>
                                                        <select id="selWeight" class="form-select" name="selWeight">
                                                            <option value="1">Low Demand</option>
                                                            <option value="2">Medium Demand</option>
                                                            <option value="3">High Demand</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col">
                                                    <div class="form-group mb-3"> <label for="input3" class="form-label">Volunteer Arrival Time</label>
                                                        <select id="selVolArrival" class="form-select" name="selVolArrival" dmx-bind:value="60">
                                                            <option value="15">15</option>
                                                            <option value="20">20</option>
                                                            <option value="25">25</option>
                                                            <option value="30">30</option>
                                                            <option value="35">35</option>
                                                            <option value="40">40</option>
                                                            <option value="45">45</option>
                                                            <option value="50">50</option>
                                                            <option value="55">55</option>
                                                            <option value="60">60</option>
                                                            <option value="75">75</option>
                                                            <option value="90">90</option>
                                                            <option value="105">105</option>
                                                            <option value="120">120</option>
                                                            <option value=""></option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <div class="d-flex">
                                    <h6 class="text-success">Volunteers</h6>
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered table-sm">
                                            <thead>
                                                <tr>
                                                    <th>$index</th>
                                                    <th></th>
                                                    <th></th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody is="dmx-repeat" dmx-generator="bs5table" dmx-bind:repeat="dvEvents1.data" id="tableRepeat2">
                                                <tr>
                                                    <td>
                                                        <img dmx-bind:src="'\\upload\\images\\profiles\\'+dvEvents1.data[$index].varImage+'.jpg'" width="40" height="40" class="rounded-circle">
                                                    </td>
                                                    <td dmx-text="$index+1"></td>
                                                    <td dmx-text="scGetVolsEvent.data.repeat[$index].decFname"></td>
                                                    <td dmx-text="scGetVolsEvent.data.repeat[$index].decLname"></td>
                                                    <td dmx-text="regDate"></td>
                                                    <td>
                                                        <div class="btn-group" role="group" aria-label="Volunteer Status">
                                                            <input type="radio" class="btn-check" dmx-bind:id="'pending_' + $index" dmx-bind:name="'choice_' + $index" value="1">
                                                            <label class="btn btn-outline-primary" dmx-bind:for="'pending_' + $index"><i class="fas fa-clock"></i></label>

                                                            <input type="radio" class="btn-check" dmx-bind:id="'selected_' + $index" dmx-bind:name="'choice_' + $index" value="2">
                                                            <label class="btn btn-outline-success" dmx-bind:for="'selected_' + $index"><i class="fas fa-check"></i></label>

                                                            <input type="radio" class="btn-check" dmx-bind:id="'waitlist_' + $index" dmx-bind:name="'choice_' + $index" value="3">
                                                            <label class="btn btn-outline-warning" dmx-bind:for="'waitlist_' + $index"><i class="fas fa-hourglass"></i></label>

                                                            <input type="radio" class="btn-check" dmx-bind:id="'cancelled_' + $index" dmx-bind:name="'choice_' + $index" value="4">
                                                            <label class="btn btn-outline-danger" dmx-bind:for="'cancelled_' + $index"><i class="fas fa-times"></i></label>
                                                        </div>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<div class="container mt-xxl-2">
    <div class="row">

        <div class="col align-self-center text-end"><i class="fas fa-search-plus fa-lg"></i></div>
        <div class="col-break w-100"></div>
        <div class="col">

            <input id="inpSearch" name="inpSearch" type="text" class="form-control mb-2">
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4" is="dmx-repeat" id="repeat1" dmx-bind:repeat="scShowAllEvents.data.query">
        <div class="col">
            <div class="card h-100 shadow border-0 rounded-3">
                <!-- Card Header -->
                <div class="card-header bg-success text-white text-center">
                    <h5 class="mb-0 dmx-text=" eventname"="" dmx-text="eventName">Card Title</h5>
                </div>

                <!-- Card Body -->
                <div class="card-body d-flex flex-column">
                    <div class="row">
                        <div class="col">
                            <p class="card-text flex-grow-1 text-center" dmx-text="'Date: '+eventDate.formatDate('dd-MM-yyyy')">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <p class="card-text flex-grow-1 text-center" dmx-text="'Time: '+eventStrtTime.formatDate('hh:mm')">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <p class="card-text flex-grow-1 text-center" dmx-text="'Num of Vols: '+numvols">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <p class="card-text flex-grow-1 text-center" dmx-text="'Venue: '+venueDesc">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        </div>
                    </div>

                </div>

                <!-- Card Footer -->
                <div<a href="#" class="btn btn-primary w-100" dmx-on:click="scGetVolsEvent.load({eventid: eventId});modEditEvent.show()">
                    <a href="#" class="btn btn-primary w-100" dmx-on:click="run([{run:{outputType:'text',action:`modEditEvent.show()`}},{run:{outputType:'text',action:`session2.set(\'evId\',eventId)`}},{run:{outputType:'text',action:`scGetVolsEvent.reset()`}},{wait:{delay:600}},{run:{outputType:'text',action:`scGetVolsEvent.load({eventid: session2.data.evId})`}},{wait:{delay:500}},{run:{outputType:'text',action:`scGetSingleEvent.load({eventid: session2.data.evId})`}}])">Edit</a>
            </div>
        </div>
    </div>
</div>
</div>