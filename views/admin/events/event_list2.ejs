<!-- Wappler include head-page="layouts/admin" fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="event_list2" appConnect="local" components="{dmxBootstrap5Modal:{},dmxFormatter:{}}"="{dmxBootstrap5Modal:{}}"="{dmxFormatter:{},dmxBootstrap5Modal:{},dmxDataTraversal:{},dmxBootstrap5TableGenerator:{},dmxBootbox5:{},dmxStateManagement:{}}<link rel="stylesheet" href="/assets/css/custom.css">" -->
<script is="dmx-flow" id="flow1" type="text/dmx-flow">[
  {
    run: {outputType: "text", disabled: true, action: "{{arr1.empty()}}"}
  },
  {
    repeat: {
      name: "repeat",
      output: true,
      outputType: "array",
      disabled: true,
      repeat: "{{scEvVols.data.query}}",
      outputFields: [],
      exec: {
        steps: {
          run: {
            outputType: "text",
            action: "{{arr1.insert(scEvVols.data.query[$index].evVolId,scEvVols.data.query[$index].status)}}"
          }
        }
      }
    }
  }
]</script>
<dmx-value id="selectedOptions" dmx-on:updated="" dmx-bind:value="arr1.items"></dmx-value>
<dmx-array id="arrStatus" dmx-on:updated=""></dmx-array>
<dmx-array id="arrEvVolId"></dmx-array>
<dmx-serverconnect id="scUpstatus" url="/api/Events/updateEventStatus2" noload="true"></dmx-serverconnect>
<dmx-serverconnect id="scDummy" url="/api/Events/dummy" noload="true"></dmx-serverconnect>
<dmx-serverconnect id="scEvVols" url="/api/Events/getVolsEvents2" dmx-param:eventid=""></dmx-serverconnect>
<dmx-serverconnect id="scEventVolData" url="/api/Events/eventVolEdit"></dmx-serverconnect>
<dmx-serverconnect id="scupdateSts" url="/api/Events/updateEventStatus2" noload="true" dmx-param:eventid="scEvVols.data.query[0].eventId"></dmx-serverconnect>

<div class="modal" id="modEditIndEvent" is="dmx-bs5-modal" tabindex="-1" dmx-on:shown-bs-modal="run([{wait:{delay:100}},{run:{outputType:'text',action:`arrEvVolId.empty()`}},{wait:{delay:500}},{repeat:{name:'repeat',output:true,outputType:'array',repeat:`scEvVols.data.query`,outputFields:[],exec:{steps:[{wait:{delay:500}},{run:{outputType:'text',action:`arrEvVolId.add(scEvVols.data.query[$index].evVolId)`}},{wait:{delay:100}},{run:{outputType:'text',action:`arrStatus.add(scEvVols.data.query[$index].status)`}}]}}}])">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <form id="form1" method="post" is="dmx-serverconnect-form" action="/api/Events/updateEventStatus2" dmx-on:success="run([{repeat:{name:'repeat',output:true,outputType:'array',repeat:`scEvVols.data.repeat`,outputFields:[],exec:{steps:{run:{outputType:'text',action:`arr1.add(tableRepeat1[$index].radiogroup.value)`}}}}},{'bootbox.alert':{message:`arr1.items+\'  array\'`}}])">

                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover table-sm">
                                        <thead>
                                            <tr>
                                                <th>Image name</th>
                                                <th>Event</th>
                                                <th>User</th>
                                                <th>F name</th>
                                                <th>L name</th>
                                                <th>Status</th>
                                                <th>Desc</th>
                                                <th>Registered date</th>

                                                <th>Ev vol</th>
                                                <th scope="row">Header</th>
                                            </tr>
                                        </thead>
                                        <tbody is="dmx-repeat" dmx-generator="bs5table" dmx-bind:repeat="scEvVols.data.query" id="tableRepeat1">
                                            <tr>
                                                <td dmx-text="eventId"></td>
                                                <td>
                                                    <img dmx-bind:src="'\\upload\\images\\profiles\\'+scEvVols.data.repeat[$index].varImage+'.jpg'" width="50" height="50">
                                                </td>
                                                <td dmx-text="eventId"></td>
                                                <td dmx-text="userId"></td>
                                                <td dmx-text="scEvVols.data.repeat[$index].decFname"></td>
                                                <td dmx-text="scEvVols.data.repeat[$index].decLname"></td>
                                                <td dmx-text="status"></td>
                                                <td dmx-text="desc"></td>
                                                <td dmx-text="registeredDate"></td>

                                                <td dmx-text="evVolId"></td>


                                                <td dmx-text="arrStatus.items[$index]"></td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <button type="button" class="btn" dmx-on:click="arrStatus.replaceAt($index, 1)" dmx-bind:class="arrStatus.items[$index] == 1 ? 'btn-red' : 'btn-outline-primary'">
                                                            A
                                                        </button>
                                                    </div>


                                                    <button type="button" dmx-bind:class="arrStatus[$index] == 2 ? 'btn btn-success active' : 'btn btn-outline-success'" dmx-on:click="arrStatus.replaceAt($index, 2)">
                                                        B
                                                    </button>
                                                    <button type="button" dmx-bind:class="arrStatus[$index] == 3 ? 'btn btn-warning active' : 'btn btn-outline-warning'" dmx-on:click="arrStatus.replaceAt($index, 3)">
                                                        C
                                                    </button>
                                                    <button type="button" dmx-bind:class="arrStatus[$index] == 4 ? 'btn btn-danger active' : 'btn btn-outline-danger'" dmx-on:click="arrStatus.replaceAt($index, 4)">
                                                        D
                                                    </button>
                                </div>
                                </td>




                                </tbody>
                                </table>
                        </div><input id="arrayEvId" name="arrayEvId" type="text" class="form-control" dmx-bind:value="arrEvVolId.items">
                        <input id="arrayStatus" name="arrayStatus" type="text" class="form-control" dmx-bind:value="arrStatus.items">
                        </form>

                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col"><button type="button" class="btn btn-primary" dmx-on:click="scupdateSts.load({voleventid: form1.tableRepeat1[0].evVolId})">save</button>
                <button type="button" class="btn btn-primary" dmx-on:click="run([{'bootbox.alert':{message:`arrStatus.items+\'satus:\'+arrStatus.items+\'\n  evid:\'+arrEvVolId.items`}},{run:{outputType:'text',disabled:true,action:`scupdateSts.load({eventid: repeat1[$index].eventId})`}}])">Disp Arr</button><button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

            </div>
        </div>
        <div class="modal-footer">


        </div>
    </div>
</div>
</div>
<meta name="ac:route" content="/admin/events/event_list2">

<div class="container">

    <div class="row">
        <div class="col">
            <h2>Events</h2>
        </div>
    </div>
    <div class="row mt-2 justify-content-between gx-1 gy-1 row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xxl-4 row-cols-xl-4 row-cols-lg-4" is="dmx-repeat" id="repeat1" dmx-bind:repeat="scEventVolData.data.qryGetAllEvents">
        <div class="col">
            <div class="card align-self-start h-100 border-1 border rounded-top rounded-3 shadow border-info">
                <div class="card-header bg-success text-light text-lg-center fw-bolder h-100">
                    <h5 class="card-title align-self-lg-center fw-bolder" dmx-text="scEventVolData.data.qryGetAllEvents[$index].eventName">Card title</h5>
                </div>
                <div class="card-body text-lg-center">

                    <p class="card-text">Venue: {{venueDesc}}</p>
                    <p class="card-text">Date: {{eventDate.formatDate('dd-MM-yyyy')}}.</p>
                    <p class="card-text">Time: {{eventStrtTime}}</p>
                    <p class="card-text">Number of Volunteers: {{numvols}}</p>
                </div>
                <div class="card-footer pt-0 pb-0 ps-0 pe-0">
                    <button id="btn1" class="btn w-100 btn-success text-bg-success text-light" dmx-on:click="modEditIndEvent.show();modEditIndEvent.data_detail1.select(eventId);arrStatus.empty();scEvVols.load({eventid: eventId})">Edit</button>
                </div>
            </div>
        </div>
    </div>
</div>