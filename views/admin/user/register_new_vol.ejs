<!-- Wappler include head-page="layouts/admin" fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="register_new_vol" appConnect="local" components="{dmxValidator:{}}" -->
<meta name="ac:route" content="/admin/user/register_new_vol">

<div class="container-fluid p-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="fas fa-user-plus fs-4 me-2"></i>
                    <h5 class="card-title mb-0">Register New Volunteer</h5>
                </div>
                <div class="card-body">
                    <form id="registration_form" method="post" is="dmx-serverconnect-form" action="/api/Users/createNewVol">
                        <!-- System Info Section -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control bg-light" id="userId" name="userId" placeholder="User ID" readonly>
                                    <label for="userId">User ID (Auto-generated)</label>
                                </div>
                            </div>
                        </div>

                        <!-- Personal Information Section -->
                        <h6 class="fw-bold mb-3 text-primary"><i class="fas fa-user me-2"></i>Personal Information</h6>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="first_name" name="fName" placeholder="First Name" required data-rule-lettersonly="true" data-msg-required="Please enter your first name" data-msg-lettersonly="Only letters are allowed">
                                    <label for="first_name">First Name</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="last_name" name="lName" placeholder="Last Name" required data-rule-lettersonly="true" data-msg-required="Please enter your last name" data-msg-lettersonly="Only letters are allowed">
                                    <label for="last_name">Last Name</label>
                                </div>
                            </div>
                        </div>

                        <!-- Account Information Section -->
                        <h6 class="fw-bold mb-3 text-primary"><i class="fas fa-lock me-2"></i>Account Information</h6>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control" id="email" name="email" placeholder="Email" required data-rule-email="true" data-msg-required="Please enter your email" data-msg-email="Please enter a valid email address">
                                    <label for="email">Email</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="username" name="username" placeholder="Username" required data-rule-alphanumeric="true" minlength="4" data-msg-required="Please enter a username" data-msg-alphanumeric="Letters, numbers, and underscores only" data-msg-minlength="Username must be at least 4 characters">
                                    <label for="username">Username</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="password" class="form-control" id="password" name="password" placeholder="Password" required minlength="8" data-msg-required="Please enter a password" data-msg-minlength="Password must be at least 8 characters long">
                                    <label for="password">Password</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="password" class="form-control" id="confirm_password" name="confirm_password" placeholder="Confirm Password" required data-rule-equalto="#password" data-msg-required="Please confirm your password" data-msg-equalto="Passwords must match">
                                    <label for="confirm_password">Confirm Password</label>
                                </div>
                            </div>
                        </div>

                        <!-- Address Section -->
                        <h6 class="fw-bold mb-3 text-primary"><i class="fas fa-home me-2"></i>Address Details</h6>
                        <div class="row g-3 mb-4">
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="add1" name="add1" placeholder="Address Line 1" required data-msg-required="Please enter your address">
                                    <label for="add1">Address Line 1</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="add2" name="add2" placeholder="Address Line 2">
                                    <label for="add2">Address Line 2 (Optional)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="town" name="town" placeholder="Town" required data-rule-lettersonly="true" data-msg-required="Please enter your town" data-msg-lettersonly="Only letters are allowed">
                                    <label for="town">Town</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="town1" name="town1" placeholder="County">
                                    <label for="town1">County</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="postcode" name="postcode" placeholder="Postcode" required data-rule-pattern="^[A-Z]{1,2}[0-9][A-Z0-9]? ?[0-9][A-Z]{2}$" data-msg-required="Please enter your postcode" data-msg-pattern="Please enter a valid UK postcode">
                                    <label for="postcode">Postcode</label>
                                </div>
                            </div>
                        </div>

                        <!-- Contact Section -->
                        <h6 class="fw-bold mb-3 text-primary"><i class="fas fa-phone me-2"></i>Contact Details</h6>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="tel" class="form-control" id="mobile" name="mobile" placeholder="Mobile" data-rule-pattern="^(?:(?:\+44)|(?:0))7\d{9}$" data-msg-pattern="Please enter a valid UK mobile number">
                                    <label for="mobile">Mobile</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="tel" class="form-control" id="tel" name="tel" placeholder="Telephone" data-rule-pattern="^(?:(?:\+44)|(?:0))[1-9]\d{8,9}$" data-msg-pattern="Please enter a valid UK telephone number">
                                    <label for="tel">Telephone (Optional)</label>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-user-plus me-2"></i>Register Volunteer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>