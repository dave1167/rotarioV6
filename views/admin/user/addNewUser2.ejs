<!-- Wappler include head-page="layouts/admin" fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="addNewUser2" appConnect="local" -->
<meta name="ac:route" content="/admin/user/addNewUser2">
<dmx-serverconnect id="scFetchRole" url="/api/Roles/fetchRoles"></dmx-serverconnect>

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="card border-0 shadow">
                <div class="card-header bg-primary bg-opacity-10 border-bottom border-primary border-opacity-50">
                    <h5 class="mb-0 text-primary">Add New User</h5>
                </div>
                <div class="card-body p-4 bg-body-tertiary">
                    <form is="dmx-serverconnect-form" id="addUserForm" method="post" action="/api/Users/addNewUser" dmx-on:success="addUserForm.reset(true);notifies1.success('User has been added')" dmx-on:error="notifies.error('Error: '+addUserForm.error.message)">
                        <div class="row g-4">
                            <!-- First Name -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control border border-secondary-subtle shadow-sm" id="firstName" name="fName" required="" data-rule-lettersonly="true" data-msg-required="Please enter first name" data-msg-lettersonly="Only letters are allowed" placeholder="Enter first name">
                                    <label for="firstName" class="text-dark">First Name</label>
                                </div>
                            </div>

                            <!-- Last Name -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control border border-secondary-subtle shadow-sm" id="lastName" name="lName" required="" data-rule-lettersonly="true" data-msg-required="Please enter last name" data-msg-lettersonly="Only letters are allowed" placeholder="Enter last name">
                                    <label for="lastName" class="text-dark">Last Name</label>
                                </div>
                            </div>

                            <!-- Username -->
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control border border-secondary-subtle shadow-sm" id="username" name="username" required data-rule-nowhitespace="true" data-rule-alphanumeric="true" data-msg-required="Please enter a username" data-msg-nowhitespace="Username cannot contain spaces" data-msg-alphanumeric="Username can only contain letters and numbers" placeholder="Enter username">
                                    <label for="username" class="text-dark">Username</label>
                                </div>
                            </div>

                            <!-- Email -->
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="email" class="form-control border border-secondary-subtle shadow-sm" id="email" name="email" required data-rule-email="true" data-msg-required="Please enter an email address" data-msg-email="Please enter a valid email address" placeholder="Enter email">
                                    <label for="email" class="text-dark">Email Address</label>
                                </div>
                            </div>

                            <!-- Role Selection -->
                            <div class="col-12">
                                <div class="form-floating">
                                    <select class="form-select border border-secondary-subtle shadow-sm" id="role" name="role" required="" data-msg-required="Please select a role" optionvalue="role" dmx-bind:options="scFetchRole.data.query" optiontext="roleName">
                                        <option value="">Select a role</option>
                                    </select>
                                    <label for="role" class="text-dark">User Role</label>
                                </div>
                            </div>

                            <!-- Password -->
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="password" class="form-control border border-secondary-subtle shadow-sm" id="password" name="password" required="" minlength="6" data-msg-required="Please enter a password" data-msg-minlength="Password must be at least 8 characters" placeholder="Enter password">
                                    <label for="password" class="text-dark">Password</label>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="col-12 text-end">
                                <button type="submit" class="btn btn-primary px-4 py-2 shadow" dmx-bind:disabled="addUserForm.running">
                                    <span dmx-show="!addUserForm.running">
                                        <i class="fas fa-user-plus me-2"></i>Add User
                                    </span>
                                    <span dmx-show="addUserForm.running">
                                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                        Adding...
                                    </span>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>